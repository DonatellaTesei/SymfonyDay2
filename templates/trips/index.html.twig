{% extends 'base.html.twig' %}
{% block title %}
	Offers 2022/2023
{% endblock %}
{% block body %}
	<style>
		h1 {
			padding-top: 100px;
			padding-left: 70px;
			color: white;
			font-size: 4em;
			font-family: "Verdana", Helvetica, sans-serif;
			text-align: left;
		}

		body {
			background-image: url('https://c4.wallpaperflare.com/wallpaper/502/267/804/grand-canyon-national-park-united-states-usa-wallpaper-preview.jpg');
			background-repeat: no-repeat;
			background-attachment: fixed;
			background-size: cover;
		}
		.container {
			padding: 50px;
		}
	</style>


	<h1>TRIPS 2022/2023</h1>
	<br>
	<div class="container">
		<div class="row row-cols-3">
			{% for trips in trips %}
				<div class="card" style="width: 18rem;">
					<div
						class="card-body">
						{# <h5 class="card-title">>{{ trips.id }}</h5> #}
						<p class="card-text">
							<b>{{ trips.name }}</b>
						</p>
						<p class="card-text">{{ trips.itinerary }}</p>
						<a href="/details/{{ trips.id }}" class="btn btn-success">Details</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
